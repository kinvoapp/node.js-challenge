{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "baseUrl": "src/",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
