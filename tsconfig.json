{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "baseUrl": "src",
    "rootDirs": ["src", "tests"],
    "target": "es2021",
    "sourceMap": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [ "*" ],
      "@/tests/*": [ "../tests/*" ],
    },
  },
  "include": ["src",  "tests"]
}
